<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_histoy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themecolor"
    android:padding="5dp">
    <ImageView
        android:id="@+id/img_his_type"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/circlered"
        android:padding="18dp"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />


    <TextView
        android:id="@+id/txt_his_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/compact_display_regular"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/txt_his_result_type"
        app:layout_constraintLeft_toRightOf="@+id/img_his_type"
        app:layout_constraintRight_toLeftOf="@+id/img_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_his_result_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="12dp"
        android:alpha="0.6"
        android:fontFamily="@font/compact_display_regular"
        android:singleLine="true"
        android:text="Text"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_his_type"
        app:layout_constraintRight_toLeftOf="@+id/img_delete"
        app:layout_constraintTop_toBottomOf="@+id/txt_his_result" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:padding="12dp"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_his_result"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>