<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blacktrans"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/themecolorlight"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                style="@style/MediumFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Sure want to save?"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/compact_display_regular"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text=""
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/txt_file_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/compact_display_regular"
                    android:paddingTop="15dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white"
                    android:text=""
                    app:layout_constraintLeft_toRightOf="@+id/txt_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_content"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_content"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_content_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/compact_display_regular"
                    android:paddingTop="4dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text=""
                    android:visibility="visible"
                   app:layout_constraintTop_toBottomOf="@+id/txt_content"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/txt_file_name_sec"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/compact_display_regular"
                    android:paddingTop="4dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/white"
                    android:text=""
                    android:visibility="visible"
                    app:layout_constraintLeft_toRightOf="@+id/txt_content_sec"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txt_content_sec"
                    app:layout_constraintBottom_toBottomOf="@+id/txt_content_sec"
                    android:textSize="16sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ly_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:fontFamily="@font/compact_display_regular"
                    android:gravity="center"
                    android:text="No"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_ok"
                    android:layout_width="80dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    app:cardBackgroundColor="@color/themecolorlight"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/compact_display_regular"
                        android:padding="5dp"
                        android:text="Ok"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
