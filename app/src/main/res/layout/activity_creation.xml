<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_top"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/themecolor"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back_create"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txt"
            style="@style/MediumFont"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:singleLine="true"
            android:text="Fill Data"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/compact_display_medium"
            app:layout_constraintEnd_toStartOf="@+id/cv_create"
            app:layout_constraintStart_toEndOf="@+id/img_back_create"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_create"
            android:layout_width="82dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/themeBlueDark"
            app:cardCornerRadius="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/txt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="0dp">

        <ImageView
            android:id="@+id/img_create"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="3dp"
            android:visibility="gone"
            android:src="@drawable/ic_check_circle"
            app:layout_constraintLeft_toLeftOf="@id/txt_create"
            app:layout_constraintRight_toRightOf="@+id/txt_create"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="14dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txt_create"
            style="@style/MediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Create"
            android:fontFamily="@font/compact_display_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
           android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:id="@+id/scrollable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/themecolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/circlered"
                    android:padding="18dp"
                    android:src="@drawable/ic_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                   />

                <TextView
                    android:id="@+id/txt_logo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/compact_display_regular"
                    android:padding="5dp"
                    android:text="Text"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_logo"
                    app:layout_constraintLeft_toRightOf="@+id/img_logo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_logo" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_id"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/themecolorlight"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/cv_url"
                app:layout_constraintTop_toBottomOf="@+id/cv_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/compact_display_medium"
                    android:text="ID"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_url"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/themecolorlight"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toRightOf="@+id/cv_id"
                app:layout_constraintRight_toLeftOf="@+id/cv_channel"
                app:layout_constraintTop_toBottomOf="@+id/cv_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/compact_display_medium"
                    android:text="URL"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_channel"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/themecolorlight"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toRightOf="@+id/cv_url"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/compact_display_medium"
                    android:text="Channel Id"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.kholifa.qraccess.countrylist.CountryCodePicker_app
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:background="@color/themecolorlight"
                android:padding="8dp"
                android:visibility="gone"
                app:ccp_showFlag="false"
                app:ccp_textColor="@color/white"
                app:ccp_textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/edt_first"
                app:layout_constraintTop_toBottomOf="@+id/cv_id" />


            <EditText
                android:id="@+id/edt_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/whitetran"
                android:cursorVisible="true"
                android:fontFamily="@font/compact_display_regular"
                android:gravity="start"
                android:hint="Enter Text Here"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/whitetran"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/ccp"
                app:layout_constraintRight_toLeftOf="@+id/img_edt_right"
                app:layout_constraintTop_toBottomOf="@+id/cv_id" />

            <ImageView
                android:id="@+id/img_edt_right"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="6dp"
                android:padding="4dp"
                android:src="@drawable/ic_clear"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/edt_first"
                app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="@+id/edt_first"
                app:layout_constraintBottom_toTopOf="@+id/txtEdtRight"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEdtRight"
                android:text="Clear"
                android:visibility="gone"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/img_edt_right"
                app:layout_constraintLeft_toLeftOf="@+id/img_edt_right"
                app:layout_constraintRight_toRightOf="@+id/img_edt_right"/>

            <EditText
                android:id="@+id/edt_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/whitetran"
                android:cursorVisible="true"
                android:fontFamily="@font/compact_display_regular"
                android:hint="Phone Number"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/whitetran"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_first" />

            <EditText
                android:id="@+id/edt_third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/whitetran"
                android:cursorVisible="true"
                android:fontFamily="@font/compact_display_regular"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/whitetran"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_second" />

            <EditText
                android:id="@+id/edt_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/whitetran"
                android:cursorVisible="true"
                android:fontFamily="@font/compact_display_regular"
                android:hint="Address"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/whitetran"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_third" />

            <TextView
                android:id="@+id/txt_birthday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:padding="10dp"
                android:text="BirthDay"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_add" />

            <TextView
                android:id="@+id/txt_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:padding="10dp"
                android:text="current"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_add" />

            <EditText
                android:id="@+id/edt_org"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/whitetran"
                android:cursorVisible="true"
                android:fontFamily="@font/compact_display_regular"
                android:hint="Org"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/whitetran"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_birthday" />

            <EditText
                android:id="@+id/edt_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/whitetran"
                android:cursorVisible="true"
                android:fontFamily="@font/compact_display_regular"
                android:hint="Note"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/whitetran"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_org" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_wpa"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/themecolorlight"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/cv_wep"
                app:layout_constraintTop_toBottomOf="@+id/edt_first">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/compact_display_medium"
                    android:text="WPA/WPA2"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_wep"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/themecolorlight"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toRightOf="@+id/cv_wpa"
                app:layout_constraintRight_toLeftOf="@+id/cv_none"
                app:layout_constraintTop_toBottomOf="@+id/edt_first">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/compact_display_regular"
                    android:text="WEP"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_none"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/themecolorlight"
                app:cardCornerRadius="10dp"
                app:layout_constraintLeft_toRightOf="@+id/cv_wep"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_first">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/compact_display_regular"
                    android:text="None"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:id="@+id/txt_type_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:gravity="start"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_none" />

            <EditText
                android:id="@+id/edt_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/whitetran"
                android:cursorVisible="true"
                android:fontFamily="@font/compact_display_regular"
                android:gravity="start"
                android:hint="Enter Password"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/whitetran"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/img_edt_right"
                app:layout_constraintTop_toBottomOf="@+id/txt_type_wifi" />


            <TextView
                android:id="@+id/txt_all_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:padding="10dp"
                android:text="All Day"
                android:textColor="@color/whitetran"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_second" />

            <Switch
                android:id="@+id/toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:thumbTint="@drawable/checker_thumb"
                android:trackTint="@drawable/checker_track"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_second"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/txt_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:padding="10dp"
                android:text="Start Time"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_all_day" />

            <TextView
                android:id="@+id/txt_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintRight_toLeftOf="@+id/txt_start_time"
                app:layout_constraintTop_toBottomOf="@+id/txt_all_day" />

            <TextView
                android:id="@+id/txt_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_all_day" />

            <TextView
                android:id="@+id/txt_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:padding="10dp"
                android:text="End Time"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_start" />

            <TextView
                android:id="@+id/txt_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintRight_toLeftOf="@+id/txt_end_time"
                app:layout_constraintTop_toBottomOf="@+id/txt_start" />

            <TextView
                android:id="@+id/txt_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/compact_display_regular"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_start" />

            <EditText
                android:id="@+id/edt_cal_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/whitetran"
                android:cursorVisible="true"
                android:fontFamily="@font/compact_display_regular"
                android:gravity="start"
                android:hint="Enter Discription"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/whitetran"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_end_date" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>