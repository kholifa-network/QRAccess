<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themecolor"
    tools:context=".activity.HistoryScannerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/con_top"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/themecolorlight"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back_history"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/txt_creator"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_creator"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txt_creator"
            style="@style/MediumFont"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/compact_display_medium"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="History"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/img_back_history"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themecolorlight"
        app:layout_constraintTop_toBottomOf="@+id/con_top"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/themeBlue"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        style="@style/RegularFont"
        app:tabSelectedTextColor="@color/themeBlue"
        app:tabTextColor="@color/white" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ad_view"
        app:layout_constraintTop_toBottomOf="@+id/tabs" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ad_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        android:layout_marginTop="10dp"
        ads:adUnitId="@string/admob_banner"
        android:layout_gravity="center"
        ads:layout_constraintTop_toBottomOf="@+id/view_pager"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>